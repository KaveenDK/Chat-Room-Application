<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="lk.ijse.edu.chatroomapplication.Controller.ClientConnectController"
            prefHeight="220.0" prefWidth="400.0"
            style="-fx-background-color:linear-gradient(to bottom,#f8fafc,#e2e8f0);">
    <children>
        <VBox spacing="16.0" alignment="CENTER" AnchorPane.topAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.bottomAnchor="0.0">
            <children>
                <Label text="Connect to Chat Server" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2563eb;"/>
                <TextField fx:id="serverField" promptText="Server Address (e.g. localhost)" />
                <TextField fx:id="nameField" promptText="Screen Name" />
                <Button fx:id="connectButton" text="Connect" style="-fx-background-color: #2563eb; -fx-text-fill: white;"/>
                <Label fx:id="errorLabel" textFill="red" visible="false"/>
            </children>
            <padding>
                <Insets top="24" right="32" bottom="24" left="32"/>
            </padding>
        </VBox>
    </children>
</AnchorPane>